{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext",
        "jsx": "preserve",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowJs": true,
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": [
        "src/**/*",
        "auto-imports.d.ts",
        "components.d.ts"
    ]
}